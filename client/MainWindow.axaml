<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bingo.MainWindow"
        Title="Bingo">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Width="150" Margin="10" Spacing="8">
            <Button Content="LINE" x:Name="LineButton" FontSize="16" />
            <Button Content="PATTERN" x:Name="PatternButton" FontSize="16" />
            <Button Content="BLACKOUT" x:Name="BlackoutButton" FontSize="16" />
        </StackPanel>

        <Grid RowDefinitions="*,Auto" ColumnDefinitions="*">
            <Grid x:Name="MainGrid" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

            <DockPanel Grid.Row="1" Margin="10">
                <TextBox x:Name="CodeInput"  Width="200"  Watermark="Input Code..." Margin="10" />
                <Button x:Name="CodeButton" Content="Confirm" Click="OnSeedClick"/>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>